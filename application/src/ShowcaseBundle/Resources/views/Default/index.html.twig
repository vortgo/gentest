{% extends  '@Showcase/Default/layout.html.twig' %}

{% block title %}Showcase{% endblock %}

{% block body %}
    <div class="row">
        {% for item in items %}
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <img class="card-img-top" style="height: 225px; width: 100%; display: block;" src="{{ item.image }}"
                         data-holder-rendered="true">
                    <div class="card-body">
                        <h5 class="card-title">{{ item.name }}
                            <small>({{ item.count }})</small>
                        </h5>
                        <p class="card-text">{{ item.description }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <form method="POST" action="{{ path('invoice_create') }}">
                                    <button type="submit"
                                            class="btn btn-primary" {% if item.count == 0 %} disabled {% endif %}>Buy
                                    </button>
                                </form>
                            </div>
                            <small class="text-muted">${{ item.price }}</small>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}